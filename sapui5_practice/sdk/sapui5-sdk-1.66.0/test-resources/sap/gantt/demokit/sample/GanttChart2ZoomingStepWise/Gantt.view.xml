<mvc:View
		controllerName="sap.gantt.sample.GanttChart2ZoomingStepWise.Gantt"
		height="100%"
		xmlns="sap.gantt.simple"
		xmlns:axistime="sap.gantt.axistime"
		xmlns:config="sap.gantt.config"
		xmlns:mvc="sap.ui.core.mvc"
		xmlns:m="sap.m"
		xmlns:table="sap.ui.table">
	<GanttChartContainer>
		<toolbar>
			<ContainerToolbar stepCountOfSlider="4">
				<m:Label text="Use Ctrl + Shift + MouseWheel to zoom" />
			</ContainerToolbar>
		</toolbar>
		<GanttChartWithTable id="gantt" shapeSelectionMode="Single">
			<axisTimeStrategy>
				<axistime:StepwiseZoomStrategy id="zoomStrategy" zoomLevels="4">
					<axistime:totalHorizon>
						<config:TimeHorizon
								startTime="20171001000000"
								endTime="20191129000000"/>
					</axistime:totalHorizon>
					<axistime:visibleHorizon>
						<config:TimeHorizon
								startTime="20181001000000"
								endTime="20181129000000"/>
					</axistime:visibleHorizon>
				</axistime:StepwiseZoomStrategy>
			</axisTimeStrategy>
			<table>
				<table:TreeTable
						selectionMode="Single"
						visibleRowCountMode="Auto"
						minAutoRowCount="12"
						selectionBehavior="RowSelector"
						enableColumnReordering="true"
						rows="{
						path: '/root',
						parameters: {
							arrayNames: ['children'],
							numberOfExpandedLevels: 1
						}
					}">
					<table:columns>
						<table:Column label="" template="text" />
					</table:columns>
					<table:rowSettingsTemplate>
						<GanttRowSettings rowId="{id}" shapes1="{tasks}">
							<shapes1>
								<BaseChevron time="{path: 'startTime', formatter: '.fnTimeConverter'}"
											 endTime="{path: 'endTime', formatter: '.fnTimeConverter'}"
											 fill="{= (${type} === 1) ? '@sapUiChartPaletteQualitativeHue5' : '@sapUiChartPaletteQualitativeHue6' }"/>
							</shapes1>
						</GanttRowSettings>
					</table:rowSettingsTemplate>
				</table:TreeTable>
			</table>
		</GanttChartWithTable>
	</GanttChartContainer>
</mvc:View>