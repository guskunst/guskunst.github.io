<core:View xmlns:template="http://schemas.sap.com/sapui5/extension/sap.ui.core.template/1"
		   xmlns="sap.m"
		   xmlns:core="sap.ui.core"
		   xmlns:f="sap.f"
		   xmlns:fe="sap.fe.controls"
		   controllerName="sap.fe.templates.Page.controller.Page"
>

	<f:DynamicPage id="template::Page"
				   headerExpanded="true"
				   preserveHeaderStateOnScroll="true"
				   showFooter="true">
		<f:title>
			<f:DynamicPageTitle>
				<f:heading>
					<Text text="Heading"></Text>
				</f:heading>
				<f:actions>
					<Text text="Actions"></Text>
				</f:actions>
				<f:snappedContent>
					<Text text="Snapped Content"></Text>
				</f:snappedContent>
			</f:DynamicPageTitle>
		</f:title>
		<f:header>
			<f:DynamicPageHeader pinnable="true">
				<f:content>
					<Text text="Dynamic Page Header"></Text>
				</f:content>
			</f:DynamicPageHeader>
		</f:header>
		<f:content>
			<ScrollContainer>
				<Text text="Content"></Text>

				<Panel width="auto" class="sapUiResponsiveMargin">
					<headerToolbar>
						<Toolbar height="3rem">
							<Title text="Content added via UI Adaptation or WYSIWYG-Editor"/>
						</Toolbar>
					</headerToolbar>
					<content>
						<Button text="Execute Bound Action" press=".applicationController.callBoundAction">
							<customData>
								<core:CustomData key="Action"
												 value="FuGetProductStock" />
							</customData>
						</Button>
					</content>
				</Panel>
			</ScrollContainer>
		</f:content>
		<f:footer>
			<Toolbar>
				<Text text="Footer"></Text>
			</Toolbar>
		</f:footer>
	</f:DynamicPage>

</core:View>
