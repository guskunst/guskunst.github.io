<core:View
		xmlns:m="sap.m"
		xmlns:flp="sap.ui.mdc.flp.info"
		xmlns:mdcBase="sap.ui.mdc.base"
		xmlns:info="sap.ui.mdc.base.info"
		xmlns:core="sap.ui.core"
		xmlns:l="sap.ui.layout"
		controllerName="sap.ui.mdc.sample.ContentHandler.example_01.controller.Main">
	<m:App id="MyApp" defaultTransitionName="show">
		<m:ScrollContainer height="100%" width="100%" horizontal="true" vertical="true" focusable="true">
			<l:VerticalLayout class="sapUiContentPadding" width="100%">
				<m:Label text="ContentHandler using sap.ui.mdc.flp.info.LinkHandler"/>

				<m:Label text="Direct Navigation"/>
				<mdcBase:Field id="IDField_DN" value="{Category}" editMode="Display">
					<mdcBase:fieldInfo>
						<mdcBase:FieldInfo>
							<info:ContentHandler sourceControl="IDField_DN">
								<info:linkHandler>
									<flp:LinkHandler sourceControl="IDField_DN"
													 semanticObjects="ProductCollection"/>
								</info:linkHandler>
							</info:ContentHandler>
						</mdcBase:FieldInfo>
					</mdcBase:fieldInfo>
				</mdcBase:Field>


				<m:Label text="Actions only"/>
				<mdcBase:Field id="IDField_AO" value="{Name}" editMode="Display">
					<mdcBase:fieldInfo>
						<mdcBase:FieldInfo>
							<info:ContentHandler sourceControl="IDField_AO">
								<info:linkHandler>
									<flp:LinkHandler sourceControl="IDField_AO"
													 textOfMainItem="{Name}"
													 descriptionOfMainItem="{Category}"
													 iconOfMainItem="/testsuite/test-resources/sap/ui/documentation/sdk/images/HT-1031.jpg"
													 semanticObjects="ProductCollection">
										<flp:items>
											<info:LinkItem key="IDInfoPanelItem04"
														   text="Superior"
														   description="Transaction SHELL"
														   href="https://www.shell.de/"
														   target="_blank"
														   icon="sap-icon://mileage"/>
										</flp:items>
										<!--<flp:semanticObjectUnavailableActions>-->
										<!--<info:SemanticObjectUnavailableAction-->
										<!--semanticObject="testsuite_mdc_base_sample_action_example_01_AdditionalActions"-->
										<!--actions="action_03,action_04"/>-->
										<!--</flp:semanticObjectUnavailableActions>-->
									</flp:LinkHandler>
								</info:linkHandler>
							</info:ContentHandler>
						</mdcBase:FieldInfo>
					</mdcBase:fieldInfo>
				</mdcBase:Field>


				<m:Label text="Actions and Main Navigation"/>
				<mdcBase:Field id="IDField_AMN" value="{Name}" editMode="Display">
					<mdcBase:fieldInfo>
						<mdcBase:FieldInfo>
							<info:ContentHandler sourceControl="IDField_AMN">
								<info:linkHandler>
									<flp:LinkHandler sourceControl="IDField_AMN"
													 textOfMainItem="{Name}"
													 descriptionOfMainItem="{Category}"
													 iconOfMainItem="/testsuite/test-resources/sap/ui/documentation/sdk/images/HT-1031.jpg"
													 semanticObjects="ProductCollection">
										<flp:items>
											<info:LinkItem key="IDInfoPanelItem04"
														   text="Superior"
														   description="Transaction SHELL"
														   href="https://www.shell.de/"
														   target="_blank"
														   icon="sap-icon://mileage"/>
										</flp:items>
										<!--<flp:semanticObjectUnavailableActions>-->
										<!--<info:SemanticObjectUnavailableAction-->
										<!--semanticObject="testsuite_mdc_base_sample_action_example_01_AdditionalActions"-->
										<!--actions="action_03,action_04"/>-->
										<!--</flp:semanticObjectUnavailableActions>-->
									</flp:LinkHandler>
								</info:linkHandler>
							</info:ContentHandler>
						</mdcBase:FieldInfo>
					</mdcBase:fieldInfo>
				</mdcBase:Field>


				<m:Label text="Contact Information only"/>
				<mdcBase:Field id="IDField_CIO" value="{Name}" editMode="Display">
					<mdcBase:fieldInfo>
						<mdcBase:FieldInfo>
							<info:ContentHandler sourceControl="IDField_CIO"
												 enablePersonalization="false">
								<info:linkHandler>
									<flp:LinkHandler sourceControl="IDField_CIO"
													 textOfMainItem="{Name}"
													 descriptionOfMainItem="{Category}"
													 iconOfMainItem="/testsuite/test-resources/sap/ui/documentation/sdk/images/HT-1031.jpg">
										<flp:items>
											<info:LinkItem key="IDInfoPanelItem04"
														   text="Superior"
														   description="Transaction SHELL"
														   href="https://www.shell.de/"
														   target="_blank"
														   icon="sap-icon://mileage"/>
										</flp:items>
									</flp:LinkHandler>
								</info:linkHandler>
								<info:additionalContent>
									<info:ContactDetails>
										<info:ContactDetailsItem
												photo="/testsuite/test-resources/sap/ui/documentation/sdk/images/johnDoe.png"
												formattedName="John Doe"
												title="Developer"
												role="Research &amp; Development"
												org="New Economy">
											<info:phones>
												<info:ContactDetailsPhoneItem uri="+0049 175 123456"
																			  types="cell, preferred"/>
												<info:ContactDetailsPhoneItem uri="+001 6101 34869-9" types="fax"/>
												<info:ContactDetailsPhoneItem uri="+001 6101 34869-0" types="work"/>
											</info:phones>
											<info:emails>
												<info:ContactDetailsEmailItem uri="john.doe@neweconomy.com"
																			  types="preferred, work"/>
											</info:emails>
											<info:addresses>
												<info:ContactDetailsAddressItem street="800 E 3rd St." code="90013"
																				locality="Los Angeles" region="CA"
																				country="USA" types="work"/>
											</info:addresses>
										</info:ContactDetailsItem>
									</info:ContactDetails>
								</info:additionalContent>
							</info:ContentHandler>
						</mdcBase:FieldInfo>
					</mdcBase:fieldInfo>
				</mdcBase:Field>


				<m:Label text="Main Navigation, Actions and Contact Information"/>
				<mdcBase:Field id="IDField_MNACI" value="{Name}" editMode="Display">
					<mdcBase:fieldInfo>
						<mdcBase:FieldInfo>
							<info:ContentHandler sourceControl="IDField_MNACI">
								<info:linkHandler>
									<flp:LinkHandler sourceControl="IDField_MNACI"
													 textOfMainItem="{Name}"
													 descriptionOfMainItem="{Category}"
													 iconOfMainItem="/testsuite/test-resources/sap/ui/documentation/sdk/images/HT-1031.jpg"
													 semanticObjects="ProductCollection">
										<flp:items>
											<info:LinkItem key="IDInfoPanelItem04"
														   text="Superior"
														   description="Transaction SHELL"
														   href="https://www.shell.de/"
														   target="_blank"
														   icon="sap-icon://mileage"/>
										</flp:items>
										<!--<flp:semanticObjectMappings>-->
										<!--<info:SemanticObjectMapping-->
										<!--semanticObject="testsuite_mdc_base_sample_action_example_01_Actions">-->
										<!--<info:SemanticObjectMappingItem key="SupplierId" value="Id"/>-->
										<!--</info:SemanticObjectMapping>-->
										<!--</flp:semanticObjectMappings>-->
										<!--<flp:semanticObjectUnavailableActions>-->
										<!--<info:SemanticObjectUnavailableAction-->
										<!--semanticObject="testsuite_mdc_base_sample_action_example_01_AdditionalActions"-->
										<!--actions="action_03,action_04"/>-->
										<!--</flp:semanticObjectUnavailableActions>-->
									</flp:LinkHandler>
								</info:linkHandler>
								<info:additionalContent>
									<info:ContactDetails>
										<info:ContactDetailsItem
												photo="/testsuite/test-resources/sap/ui/documentation/sdk/images/johnDoe.png"
												formattedName="John Doe"
												title="Developer"
												role="Research &amp; Development"
												org="New Economy">
											<info:phones>
												<info:ContactDetailsPhoneItem uri="+0049 175 123456"
																			  types="cell, preferred"/>
												<info:ContactDetailsPhoneItem uri="+001 6101 34869-9" types="fax"/>
												<info:ContactDetailsPhoneItem uri="+001 6101 34869-0" types="work"/>
											</info:phones>
											<info:emails>
												<info:ContactDetailsEmailItem uri="john.doe@neweconomy.com"
																			  types="preferred, work"/>
											</info:emails>
											<info:addresses>
												<info:ContactDetailsAddressItem street="800 E 3rd St." code="90013"
																				locality="Los Angeles" region="CA"
																				country="USA" types="work"/>
											</info:addresses>
										</info:ContactDetailsItem>
									</info:ContactDetails>
								</info:additionalContent>
							</info:ContentHandler>
						</mdcBase:FieldInfo>
					</mdcBase:fieldInfo>
				</mdcBase:Field>

				<m:Panel headerText="Main Navigation, Actions and Contact Information" expandable="true"
						 expanded="false" width="auto" expand="onExpand"/>

			</l:VerticalLayout>
		</m:ScrollContainer>
	</m:App>
</core:View>
