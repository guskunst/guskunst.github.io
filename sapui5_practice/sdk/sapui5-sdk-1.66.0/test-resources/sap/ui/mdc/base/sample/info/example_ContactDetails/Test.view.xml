	<m:App defaultTransitionName="show">
		<m:ScrollContainer height="100%" width="100%" horizontal="false" vertical="true" focusable="true">
			<l:VerticalLayout class="sapUiContentPadding" width="100%">
				<l:content>
					<m:Panel headerText="sap.ui.mdc.base.info.ContactDetails" expandable="true" expanded="true"
							 width="auto">
						<m:content>
							<info:ContactDetails>
								<info:items>
									<info:ContactDetailsItem
											photo="/testsuite/test-resources/sap/ui/documentation/sdk/images/johnDoe.png"
