											org="New Economy">
										<info:emails>
											<info:ContactDetailsEmailItem uri="john.doe@work.com" types="work"/>
											<info:ContactDetailsEmailItem uri="john.doe@home_preferred.com"
																		  types="home,preferred"/>
										</info:emails>
										<info:phones>
											<info:ContactDetailsPhoneItem uri="+001610134869-9" types="fax"/>
											<info:ContactDetailsPhoneItem uri="+0049175123456" types="cell"/>
											<info:ContactDetailsPhoneItem uri="+001610134869-0" types="work"/>
										</info:phones>
										<info:addresses>
											<info:ContactDetailsAddressItem street="800 E 3rd St."
																			code="90013"
																			locality="Los Angeles"
																			region="CA"
																			country="USA"
																			types="work"/>
										</info:addresses>
									</info:ContactDetailsItem>
								</info:items>
							</info:ContactDetails>
						</m:content>
					</m:Panel>
				</l:content>
			</l:VerticalLayout>
		</m:ScrollContainer>
	</m:App>
</core:View>
