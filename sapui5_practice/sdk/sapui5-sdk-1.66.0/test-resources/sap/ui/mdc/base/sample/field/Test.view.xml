<mvc:View height="100%" controllerName="sap.ui.mdc.base.sample.field.Test"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:m="sap.m"
	xmlns:mdc="sap.ui.mdc.base"
	xmlns:mdcFB="sap.ui.mdc.base.filterbar"
	xmlns:l="sap.ui.layout"
	xmlns:form="sap.ui.layout.form"
	xmlns:c="sap.ui.core"
	xmlns:legend="sap.ui.core.feature.legend"
	xmlns:custom="sap.ui.mdc.base.sample.field.lib">

	<m:App id="MyApp" defaultTransitionName="show">
		<m:Page id="P0" title="Simple Fields" titleLevel="H1">
			<form:SimpleForm layout="ColumnLayout" editable="true"
				labelSpanXL="5" labelSpanL="5" labelSpanM="4" columnsXL="3" columnsL="2" columnsM="1"
				singleContainerFullSize="false" adjustLabelSpan="false">
				<c:Title text="normal Fields"></c:Title>

				<m:Label text="A simple Field"></m:Label>
				<mdc:Field id="F1" value="{Name}" change="handleChange" liveChange="handleLiveChange"></mdc:Field>

				<m:Label text="A simple Field in display mode"></m:Label>
				<mdc:Field id="F2" value="{Name}" editMode="Display" display="ValueDescription" change="handleChange" liveChange="handleLiveChange"></mdc:Field>

				<m:Label text="A required Field"></m:Label>
				<mdc:Field id="F4" required="true" placeholder="placeholder" change="handleChange" liveChange="handleLiveChange"></mdc:Field>

				<m:Label text="A readonly Field"></m:Label>
				<mdc:Field id="F5" value="{Name}" editMode="ReadOnly" change="handleChange" liveChange="handleLiveChange"></mdc:Field>

				<m:Label text="A disabled Field"></m:Label>
				<mdc:Field id="F6" value="{Name}" editMode="Disabled" change="handleChange" liveChange="handleLiveChange"></mdc:Field>

				<m:Label text="display only with additionalValue"></m:Label>
				<mdc:Field id="F7a" value="{ProductId}" additionalValue="{Name}" display="ValueDescription" editMode="Display" change="handleChange" liveChange="handleLiveChange">
				</mdc:Field>

				<m:Label text="Toggle Display mode"></m:Label>
				<mdc:Field id="F11" value="{Name}" editMode="Display" change="handleChange" liveChange="handleLiveChange"></mdc:Field>
				<m:ToggleButton id="B11" text="Display" pressed="true" press="toggleDisplay"></m:ToggleButton>

				<m:Label text="A multi line Field in display mode"></m:Label>
				<mdc:Field id="F17" value="{Description}" editMode="Display" multipleLines="true" change="handleChange" liveChange="handleLiveChange"></mdc:Field>

				<m:Label text="A multi line Field in edit mode"></m:Label>
				<mdc:Field id="F18" value="{Description}" editMode="Editable" multipleLines="true" change="handleChange" liveChange="handleLiveChange"></mdc:Field>

				<m:Label text="Field with error"></m:Label>
				<mdc:Field id="F19" value="{Name}" valueState="Error" valueStateText="error text" change="handleChange" liveChange="handleLiveChange"></mdc:Field>

				<m:Label text="Field with text alignment End"></m:Label>
				<mdc:Field id="F20" value="{Name}" textAlign="End" change="handleChange" liveChange="handleLiveChange"></mdc:Field>

				<m:Label text="Field with text direction RTL"></m:Label>
				<mdc:Field id="F21" value="{Name}" textDirection="RTL" change="handleChange" liveChange="handleLiveChange"></mdc:Field>

				<c:Title text="Fields with content controls"></c:Title>

				<m:Label text="Slider"></m:Label>
				<mdc:Field id="F3" value="{Quantity}" change="handleChange" liveChange="handleLiveChange" dataType="Edm.Float">
					<m:Slider value="{path: '$field>/conditions', type: 'sap.ui.mdc.base.type.ConditionsType'}"/>
				</mdc:Field>

				<m:Label text="display only with additionalValue and ValueState"></m:Label>
				<mdc:Field id="F7" value="{Name}" additionalValue="{ProductId}" valueState="Error" display="ValueDescription" editMode="Display" change="handleChange" liveChange="handleLiveChange">
					<mdc:contentDisplay>
						<m:ObjectStatus text="{path: '$field>/conditions', type: 'sap.ui.mdc.base.type.ConditionsType'}" state="{$field>/valueState}"/>
					</mdc:contentDisplay>
				</mdc:Field>

				<m:Label text="Link"></m:Label>
				<mdc:Field id="F12" value="Url" additionalValue="{= '../../../../../../../' + ${ProductPicUrl}}" editMode="Display" change="handleChange" liveChange="handleLiveChange" press="handlePress">
					<m:Link text="{path: '$field>/conditions', type: 'sap.ui.mdc.base.type.ConditionsType'}" href="{path:'$field>/additionalValue', type:'sap.ui.model.type.String'}" />
				</mdc:Field>

				<c:Title text="different types"></c:Title>

				<m:Label text="type date"></m:Label>
				<mdc:Field id="F8" value="{path:'Date', type:'sap.ui.model.odata.type.DateTime', formatOptions: {style: 'short'}, constraints: {displayFormat: 'Date'}, targetType: 'string'}" dataType="Edm.DateTime" dataTypeFormatOptions="{style: 'short'}" dataTypeConstraints="{displayFormat: 'Date'}" change="handleChange" liveChange="handleLiveChange"></mdc:Field>
				<m:Text id="T1" text="{path:'Date', type:'sap.ui.model.odata.type.DateTime', constraints: {displayFormat: 'Date'}}" />

				<m:Label text="type date in display mode"></m:Label>
				<mdc:Field id="F9" value="{Date}" dataType="Edm.DateTime" dataTypeFormatOptions="{style: 'short'}" dataTypeConstraints="{displayFormat: 'Date'}" editMode="Display" change="handleChange"></mdc:Field>

				<m:Label text="type dateTime"></m:Label>
				<mdc:Field id="F10" value="{DateTime}" dataType="Edm.DateTimeOffset" dataTypeFormatOptions="{style: 'short'}" change="handleChange" liveChange="handleLiveChange"></mdc:Field>
				<mdc:Field id="F10a" value="{path: 'DateTime', type:'sap.ui.model.type.DateTime', targetType: 'string'}" dataType="sap.ui.model.type.DateTime" change="handleChange" liveChange="handleLiveChange"></mdc:Field>

				<m:Label text="type dateTime in display mode"></m:Label>
				<mdc:Field id="F13" value="{DateTime}" dataType="Edm.DateTimeOffset" dataTypeFormatOptions="{style: 'short'}" editMode="Display" change="handleChange"></mdc:Field>

				<m:Label text="type Time"></m:Label>
				<mdc:Field id="F14" value="{path:'Time', type:'sap.ui.model.odata.type.TimeOfDay', formatOptions: {style: 'short'}, targetType: 'string'}" change="handleChange" liveChange="handleLiveChange"></mdc:Field>

				<m:Label text="type Time in display mode"></m:Label>
				<mdc:Field id="F15" value="{path:'Time', type:'sap.ui.model.odata.type.TimeOfDay', formatOptions: {style: 'short'}, targetType: 'string'}" editMode="Display" change="handleChange"></mdc:Field>
<!--
				<m:Label text="Link"></m:Label>
				<mdc:Field id="F16" value="SAP" additionalValue="http://www.sap.com" dataType="Link" editMode="Display" press="handlePress"></mdc:Field>
-->
				<m:Label text="type Boolean"></m:Label>
				<mdc:Field id="F22" value="{Important}" dataType="Edm.Boolean" display="Description" change="handleChange" liveChange="handleLiveChange"></mdc:Field>

				<m:Label text="type Boolean in display mode"></m:Label>
				<mdc:Field id="F23" value="{Important}" dataType="Edm.Boolean" display="Description" editMode="Display" change="handleChange"></mdc:Field>

			</form:SimpleForm>
			<m:footer>
				<m:Bar>
					<m:contentLeft>
						<c:Icon id="MyIcon"></c:Icon>
						<m:Text id="MyText" text="Event" width="400px" wrapping="false"></m:Text>
					</m:contentLeft>
					<m:contentMiddle>
						<m:SegmentedButton selectedKey="P0" width="320px" select="handleButton">
							<m:items>
								<m:SegmentedButtonItem key="P0" text="Simple"></m:SegmentedButtonItem>
								<m:SegmentedButtonItem key="P1" text="FieldHelp"></m:SegmentedButtonItem>
								<m:SegmentedButtonItem key="P2" text="FieldInfo"></m:SegmentedButtonItem>
								<m:SegmentedButtonItem key="P3" text="Table"></m:SegmentedButtonItem>
							</m:items>
						</m:SegmentedButton>
					</m:contentMiddle>
					<m:contentRight>
						<c:Icon id="MyIconRight"></c:Icon>
						<m:Text id="MyTextRight" text="LiveChange" width="400px" wrapping="false"></m:Text>
					</m:contentRight>
				</m:Bar>
			</m:footer>
		</m:Page>
		<m:Page id="P1" title="FieldHelp Fields" titleLevel="H1">
			<form:SimpleForm layout="ColumnLayout" editable="true"
				labelSpanXL="5" labelSpanL="5" labelSpanM="4" columnsXL="3" columnsL="2" columnsM="1"
				singleContainerFullSize="false" adjustLabelSpan="false">
				<c:Title text="standard help"></c:Title>

				<m:Label text="Base fieldHelp"></m:Label>
				<mdc:Field id="F2-1" value="{SupplierName}" change="handleChange" liveChange="handleLiveChange" fieldHelp="F2-1-H">
					<mdc:dependents>
						<mdc:FieldHelpBase id="F2-1-H"></mdc:FieldHelpBase>
					</mdc:dependents>
				</mdc:Field>

				<c:Title text="custom help"></c:Title>
				<m:Label text="using SampleFieldHelp"></m:Label>
				<mdc:Field id="F2-2" value="{SupplierName}" change="handleChange" liveChange="handleLiveChange" fieldHelp="F2-2-H">
					<mdc:dependents>
						<custom:SampleFieldHelp id="F2-2-H">
							<c:Item id="I1" text="Item 1" key="I1"></c:Item>
							<c:Item id="I2" text="Item 2" key="I2"></c:Item>
							<c:Item id="I3" text="Item 3" key="I3"></c:Item>
						</custom:SampleFieldHelp>
					</mdc:dependents>
				</mdc:Field>

				<m:Label text="using CustomFieldHelp"></m:Label>
				<mdc:Field id="F2-3" value="{Category}" change="handleChange" liveChange="handleLiveChange" fieldHelp="F2-3-H">
					<mdc:dependents>
						<mdc:CustomFieldHelp id="F2-3-H" beforeOpen="handleBeforeOpen">
							<m:HBox>
								<m:Button id="B1" icon="sap-icon://wrench" press="handleIconPress"/>
								<m:Button id="B2" icon="sap-icon://lightbulb" press="handleIconPress"/>
								<m:Button id="B3" icon="sap-icon://camera" press="handleIconPress"/>
								<m:Button id="B4" icon="sap-icon://umbrella" press="handleIconPress"/>
							</m:HBox>
						</mdc:CustomFieldHelp>
					</mdc:dependents>
				</mdc:Field>

				<c:Title text="list help"></c:Title>
				<m:Label text="using ListFieldHelp"></m:Label>
				<mdc:Field id="F2-4" value="870394932" display="Description" change="handleChange" liveChange="handleLiveChange" fieldHelp="F2-4-H">
					<mdc:dependents>
						<mdc:ListFieldHelp id="F2-4-H"
								items="{path: '/ProductCollection'}" >
							<c:ListItem text="{Name}" additionalText="{ProductId}" key="{ProductId}" icon="{= '../../../../../../../' + ${ProductPicUrl}}"/>
						</mdc:ListFieldHelp>
					</mdc:dependents>
				</mdc:Field>
				<m:Label text="using the same ListFieldHelp"></m:Label>
				<mdc:Field id="F2-4a" value="22134T" display="Description" change="handleChange" liveChange="handleLiveChange" fieldHelp="F2-4-H">
				</mdc:Field>

				<c:Title text="table help"></c:Title>
				<m:Label text="default implementation of FieldValueHelp without dialog"></m:Label>
				<mdc:Field id="F2-6" value="870394932" display="Description" change="handleChange" liveChange="handleLiveChange" fieldHelp="F2-6-H">
					<mdc:dependents>
						<mdc:FieldValueHelp id="F2-6-H"
							noDialog="true"
							filterFields="*ProductId,Name*"
							keyPath="ProductId"
							descriptionPath="Name">
							<mdc:FieldValueHelpMTableWrapper id="F2-6-H-W">
								<m:Table items="{path: '/ProductCollection'}" width="30rem">
									<m:columns>
										<m:Column>
											<m:Label text="{/#Product/ProductId/@sap:label}"></m:Label>
										</m:Column>
										<m:Column width="10rem">
											<m:Label text="{/#Product/Name/@sap:label}"></m:Label>
										</m:Column>
										<m:Column width="10rem">
											<m:Label text="{/#Product/Description/@sap:label}"></m:Label>
										</m:Column>
									</m:columns>
									<m:items>
										<m:ColumnListItem type="Active">
											<m:Text text="{ProductId}"></m:Text>
											<m:Text text="{Name}"></m:Text>
											<m:Text text="{Description}"></m:Text>
										</m:ColumnListItem>
									</m:items>
								</m:Table>
							</mdc:FieldValueHelpMTableWrapper>
						</mdc:FieldValueHelp>
					</mdc:dependents>
				</mdc:Field>

				<m:Label text="using the same FieldValueHelp"></m:Label>
				<mdc:Field id="F2-6a" value="22134T" display="Description" change="handleChange" liveChange="handleLiveChange" fieldHelp="F2-6-H">
				</mdc:Field>

				<c:Title text="ValueHelp"></c:Title>
				<m:Label text="using FieldValueHelp"></m:Label>
				<mdc:Field
					id="F2-7"
					value="870394932"
					display="Description"
					change="handleChange"
					liveChange="handleLiveChange"
					fieldHelp="FVH1">
					<mdc:dependents>
							<mdc:FieldValueHelp id="FVH1"
								title="Product"
								filterFields="*ProductId,Name*"
								keyPath="ProductId"
								descriptionPath="Name">
								<mdc:FieldValueHelpMTableWrapper id="FVH1-W">
									<m:Table items="{path: '/ProductCollection'}" width="26rem">
										<m:columns>
											<m:Column>
												<m:Label text="{/#Product/ProductId/@sap:label}"></m:Label>
											</m:Column>
											<m:Column width="10rem">
												<m:Label text="{/#Product/Name/@sap:label}"></m:Label>
											</m:Column>
											<m:Column width="2rem">
												<m:Label text="Icon"></m:Label>
											</m:Column>
										</m:columns>
										<m:items>
											<m:ColumnListItem type="Active">
												<m:Text text="{ProductId}"></m:Text>
												<m:Text text="{Name}"></m:Text>
												<m:Image src="{= '../../../../../../../' + ${ProductPicUrl}}" height="1rem"></m:Image>
											</m:ColumnListItem>
										</m:items>
									</m:Table>
								</mdc:FieldValueHelpMTableWrapper>
							</mdc:FieldValueHelp>
					</mdc:dependents>
				</mdc:Field>
				<m:Label text="using the same FieldValueHelp"></m:Label>
				<mdc:Field
					id="F2-7a"
					value="22134T"
					display="Description"
					change="handleChange"
					liveChange="handleLiveChange"
					fieldHelp="FVH1">
				</mdc:Field>
				<m:Label text="using async FieldValueHelp"></m:Label>
				<mdc:Field
					id="F2-7b"
					value="870394932"
					additionalValue="Flat Medium"
					display="DescriptionValue"
					change="handleChange"
					liveChange="handleLiveChange"
					fieldHelp="FVH2">
					<mdc:dependents>
							<mdc:FieldValueHelp id="FVH2"
								title="Product"
								filterFields="*ProductId,Name*"
								keyPath="ProductId"
								descriptionPath="Name"
								open="handleAsyncVHOpen">
								<mdc:FieldValueHelpMTableWrapper id="FVH2-W" />
							</mdc:FieldValueHelp>
							<m:Table id="FVH2-T" items="{path: '/ProductCollection'}" width="26rem">
								<m:columns>
									<m:Column>
										<m:Label text="{/#Product/ProductId/@sap:label}"></m:Label>
									</m:Column>
									<m:Column width="10rem">
										<m:Label text="{/#Product/Name/@sap:label}"></m:Label>
									</m:Column>
									<m:Column width="2rem">
										<m:Label text="Icon"></m:Label>
									</m:Column>
								</m:columns>
								<m:items>
									<m:ColumnListItem type="Active">
										<m:Text text="{ProductId}"></m:Text>
										<m:Text text="{Name}"></m:Text>
										<m:Image src="{= '../../../../../../../' + ${ProductPicUrl}}" height="1rem"></m:Image>
									</m:ColumnListItem>
								</m:items>
							</m:Table>
					</mdc:dependents>
				</mdc:Field>



				<c:Title text="Fields with type Currency"></c:Title>

				<m:Label text="currency field"></m:Label>
				<mdc:Field
					id="F2-8"
					value="{parts: [{path: 'Price'}, {path: 'CurrencyCode'}], type: 'sap.ui.model.type.Currency'}"
					placeholder="{/#Product/Price/@sap:label}"
					display="Value" change="handleChange"
					liveChange="handleLiveChange"
					fieldHelp="FVH-Currency">
					<mdc:dependents>
						<mdc:ListFieldHelp id="FVH-Currency"
								items="{/currencies}" >
							<c:ListItem key="{id}" text="{unit}" additionalText="{text}"/>
						</mdc:ListFieldHelp>
					</mdc:dependents>
				</mdc:Field>

				<m:Label text="currency field in display mode"></m:Label>
				<mdc:Field id="F2-8_2" value="{parts: [{path: 'Price'}, {path: 'CurrencyCode'}], type: 'sap.ui.model.type.Currency'}" display="Value" editMode="Display" change="handleChange"></mdc:Field>

				<m:Label text="input with currency"></m:Label>
				<m:Input id="F2-8_3" value="{parts: [{path: 'Price'}, {path: 'CurrencyCode'}], type: 'sap.ui.model.type.Currency'}"></m:Input>



				<c:Title text="Fields with type OData Currency"></c:Title>

				<m:Label text="odata-currency field"></m:Label>
				<mdc:Field
					id="F2-9_1"
					value="{parts: [{path: 'Price'}, {path: 'CurrencyCode'}, 'view>/ODataCurrencyCodeList'], type: 'sap.ui.model.odata.type.Currency'}"
					placeholder="{/#Product/Price/@sap:label}"
					display="Value" change="handleChange"
					liveChange="handleLiveChange"
					fieldHelp="FVH-Currency2">
					<mdc:dependents>
						<mdc:ListFieldHelp id="FVH-Currency2"
								items="{/currencies}" >
							<c:ListItem key="{id}" text="{unit}" additionalText="{text}"/>
						</mdc:ListFieldHelp>
					</mdc:dependents>
				</mdc:Field>

				<m:Label text="odata-currency field in display mode"></m:Label>
				<mdc:Field id="F2-9_2" value="{parts: [{path: 'Price'}, {path: 'CurrencyCode'}, 'view>/ODataCurrencyCodeList'], type: 'sap.ui.model.odata.type.Currency'}" display="Value" editMode="Display" change="handleChange"></mdc:Field>

				<m:Label text="input with odata-currency"></m:Label>
				<m:Input id="F2-9_3" value="{parts: [{path: 'Price'}, {path: 'CurrencyCode'}, 'view>/ODataCurrencyCodeList'], type: 'sap.ui.model.odata.type.Currency'}"></m:Input>




				<c:Title text="Fields with type Unit"></c:Title>

				<m:Label text="unit field"></m:Label>
				<mdc:Field
					id="F2-10"
					value="{parts: [{path: 'WeightMeasure'}, {path: 'WeightUnit'}], type: 'sap.ui.model.type.Unit'}"
					placeholder="{/#Product/WeightMeasure/@sap:label}"
					display="Value" change="handleChange"
					liveChange="handleLiveChange"
					fieldHelp="FVH-WeightUnit">
					<mdc:dependents>
						<mdc:ListFieldHelp id="FVH-WeightUnit"
								items="{/weightUnits}" >
							<c:ListItem key="{id}" text="{unit}" additionalText="{text}"/>
						</mdc:ListFieldHelp>
					</mdc:dependents>
				</mdc:Field>

				<m:Label text="unit field in display mode"></m:Label>
				<mdc:Field id="F2-11" value="{parts: [{path: 'WeightMeasure'}, {path: 'WeightUnit'}], type: 'sap.ui.model.type.Unit'}" display="Value" editMode="Display" change="handleChange"></mdc:Field>

				<m:Label text="input with unit"></m:Label>
				<m:Input id="F2-11_2" value="{parts: [{path: 'WeightMeasure'}, {path: 'WeightUnit'}], type: 'sap.ui.model.type.Unit'}"></m:Input>




				<c:Title text="Fields with type OData Unit"></c:Title>

				<m:Label text="single odata-unit field (LFH)"></m:Label>
				<mdc:Field
					id="F2-10_3"
					value="{parts: ['WeightMeasure', 'WeightODataUnit', 'view>/ODataUnitCodeList'], type: 'sap.ui.model.odata.type.Unit', formatOptions: { emptyString: 0 }}"
					placeholder="{/#Product/WeightMeasure/@sap:label}"
					display="Value" change="handleChange"
					liveChange="handleLiveChange"
					fieldHelp="FVH-WeightUnit1">
					<mdc:dependents>
						<mdc:ListFieldHelp id="FVH-WeightUnit1"
								items="{/weightODataUnits}" >
							<c:ListItem key="{id}" text="{unit}" additionalText="{text}"/>
						</mdc:ListFieldHelp>
					</mdc:dependents>
				</mdc:Field>

				<m:Label text="single odata-unit field (VHD)"></m:Label>
				<mdc:Field
					id="F2-10_4"
					value="{parts: ['WeightMeasure', 'WeightODataUnit', 'view>/ODataUnitCodeList'], type: 'sap.ui.model.odata.type.Unit', formatOptions: { emptyString: '' }}"
					placeholder="{/#Product/WeightMeasure/@sap:label}"
					display="Value" change="handleChange"
					liveChange="handleLiveChange"
					fieldHelp="FVH-WeightUnit3">
					<mdc:dependents>
							<mdc:FieldValueHelp id="FVH-WeightUnit3"
								title="Units"
								keyPath="unit"
								descriptionPath="text"
								filterFields="*unit,text*">
								<mdc:FieldValueHelpMTableWrapper >
									<m:Table items="{/weightODataUnits}" width="16rem">
										<m:columns>
											<m:Column width="3rem">
												<m:Label text="ID"></m:Label>
											</m:Column>
											<m:Column width="3rem">
												<m:Label text="Unit"></m:Label>
											</m:Column>
											<m:Column >
												<m:Label text="Text"></m:Label>
											</m:Column>
										</m:columns>
										<m:items>
											<m:ColumnListItem type="Active">
												<m:Text text="{id}"></m:Text>
												<m:Text text="{unit}"></m:Text>
												<m:Text text="{text}"></m:Text>
											</m:ColumnListItem>
										</m:items>
									</m:Table>
								</mdc:FieldValueHelpMTableWrapper>
							</mdc:FieldValueHelp>
					</mdc:dependents>
				</mdc:Field>

				<m:Label text="odata-unit fields"></m:Label>
				<mdc:Field
					id="F2-10_1"
					value="{parts: ['WeightMeasure', 'WeightODataUnit', 'view>/ODataUnitCodeList'], type: 'sap.ui.model.odata.type.Unit', formatOptions: { showMeasure: false, emptyString : 0 }}"
					placeholder="{/#Product/WeightMeasure/@sap:label}"
					display="Value" change="handleChange"
					liveChange="handleLiveChange">
				</mdc:Field>
				<mdc:Field
					id="F2-10_2"
					value="{parts: ['WeightODataUnit'], type: 'sap.ui.model.odata.type.String'}"
					placeholder="{/#Product/WeightMeasure/@sap:label}"
					display="Value" change="handleChange"
					liveChange="handleLiveChange"
					fieldHelp="FVH-WeightUnit2">
					<mdc:dependents>
						<mdc:ListFieldHelp id="FVH-WeightUnit2"
								items="{/weightODataUnits}" >
							<c:ListItem key="{id}" text="{unit}" additionalText="{text}"/>
						</mdc:ListFieldHelp>
					</mdc:dependents>
