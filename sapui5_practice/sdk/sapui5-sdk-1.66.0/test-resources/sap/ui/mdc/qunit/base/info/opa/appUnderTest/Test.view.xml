<core:View height="100%" controllerName="appUnderTest.Test" xmlns:m="sap.m" xmlns:flp="sap.ui.mdc.flp.info"
		   xmlns:mdcBase="sap.ui.mdc.base" xmlns:info="sap.ui.mdc.base.info"
		   xmlns:core="sap.ui.core">

	<m:App id="MyApp" defaultTransitionName="show">
		<m:Page>
			<m:headerContent>
				<m:Button icon="sap-icon://wrench" press="onPressRTA"/>
			</m:headerContent>
			<m:content>
				<m:Table id="idTable" items="{path: '/ProductCollection'}">
					<m:columns>
						<m:Column>
							<m:Text text="Name"/>
						</m:Column>
						<m:Column>
							<m:Text text="Product ID"/>
						</m:Column>
						<m:Column>
							<m:Text text="Category"/>
						</m:Column>
					</m:columns>
					<m:items>
						<m:ColumnListItem>
							<m:cells>
								<mdcBase:Field id="IDField_N" value="{Name}" editMode="Display">
									<mdcBase:fieldInfo>
										<mdcBase:FieldInfo>
											<info:ContentHandler sourceControl="IDField_N">
												<info:linkHandler>
													<flp:LinkHandler sourceControl="IDField_N"
																	 textOfMainItem="{Name}"
																	 mainSemanticObject="appUnderTest_SemanticObjectName"
																	 semanticObjects="appUnderTest_SemanticObjectName">
													</flp:LinkHandler>
												</info:linkHandler>
											</info:ContentHandler>
										</mdcBase:FieldInfo>
									</mdcBase:fieldInfo>
								</mdcBase:Field>
								<mdcBase:Field id="IDField_P" value="{ProductId}" editMode="Display">
									<mdcBase:fieldInfo>
										<mdcBase:FieldInfo>
											<info:ContentHandler enablePersonalization="true"
																 sourceControl="IDField_P">
												<info:linkHandler>
													<info:LinkHandler sourceControl="IDField_P">
														<info:LinkItem
																key="IDLinkItem00"
																isMain="true"
																text="{ProductId}"
																description="{Name}"
																icon="{Image}"
																href="#link00"/>
														<info:LinkItem
																key="IDLinkItem01"
																text="Review Description"
																description="Transaction code DR"
																icon="sap-icon://to-be-reviewed"
																href="#link01"/>
														<info:LinkItem
																key="IDLinkItem02"
																text="Edit Description"
																description="Transaction code DE"
																icon="sap-icon://user-edit"
																href="#link02"/>
													</info:LinkHandler>
												</info:linkHandler>
											</info:ContentHandler>
										</mdcBase:FieldInfo>
									</mdcBase:fieldInfo>
								</mdcBase:Field>
								<mdcBase:Field id="IDField_C" value="{Category}" editMode="Display">
									<mdcBase:fieldInfo>
										<mdcBase:FieldInfo>
											<info:ContentHandler sourceControl="IDField_C">
												<info:linkHandler>
													<flp:LinkHandler sourceControl="IDField_C"
																	 textOfMainItem="{Category}"
																	 mainSemanticObject="appUnderTest_SemanticObjectCategory"
																	 semanticObjects="appUnderTest_SemanticObjectCategory">
													</flp:LinkHandler>
												</info:linkHandler>
											</info:ContentHandler>
										</mdcBase:FieldInfo>
									</mdcBase:fieldInfo>
								</mdcBase:Field>
							</m:cells>
						</m:ColumnListItem>
					</m:items>
				</m:Table>
			</m:content>
		</m:Page>
	</m:App>
</core:View>

