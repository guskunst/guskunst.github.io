<mvc:View
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns:smartField="sap.ui.comp.smartfield"
	xmlns:html="http://www.w3.org/1999/xhtml"
	xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1" controllerName="test.sap.ui.comp.smartfield.SmartFieldTypes.SmartField"
	xmlns:form="sap.ui.comp.smartform"
	xmlns="sap.m"
	xmlns:ce="sap.ui.codeeditor"
	xmlns:l="sap.ui.layout"
	xmlns:semantic="sap.m.semantic"
	height="100%">

	<SplitApp id="app">
		<masterPages>
			<semantic:MasterPage>
				<List id="masterList" mode="SingleSelectMaster" selectionChange="onProductSelect" headerText="Types" includeItemInSelection="true" noDataText="No products" items="{
						path: '/Types',
							sorter: {
								path: 'Description',
								descending: false
							}
						}">
					<items>
						<StandardListItem title="{ID}" description="{Description}"/>
					</items>
				</List>
			</semantic:MasterPage>
		</masterPages>
		<detailPages>
			<semantic:DetailPage id="detail">
				<form:SmartForm id="form" editable="{view>/editMode}" title="{Description}" editToggled="onEditToggled">
					<form:Group>
						<form:GroupElement>
							<smartField:SmartField id="date" value="{DATE}" contextEditable="true" width="12rem" change="updateCodeEditors"/>
						</form:GroupElement>
					</form:Group>

					<form:Group>
						<form:GroupElement>
							<smartField:SmartField id="time" value="{TIME}" contextEditable="true" width="12rem" change="updateCodeEditors"/>
						</form:GroupElement>
					</form:Group>

					<form:Group>
						<form:GroupElement>
							<smartField:SmartField id="stringDate" value="{STRINGDATE}" contextEditable="true" width="12rem" change="updateCodeEditors"/>
						</form:GroupElement>
					</form:Group>

					<form:Group>
						<form:GroupElement>
							<smartField:SmartField id="string" value="{STRING}" contextEditable="true" width="12rem" change="updateCodeEditors"/>
						</form:GroupElement>
					</form:Group>

					<form:Group>
						<form:GroupElement>
							<smartField:SmartField id="decimal" value="{DECIMAL}" contextEditable="true" width="12rem" change="updateCodeEditors"/>
						</form:GroupElement>
					</form:Group>

					<form:Group>
						<form:GroupElement>
							<smartField:SmartField id="double" value="{DOUBLE}" contextEditable="true" width="12rem" change="updateCodeEditors"/>
						</form:GroupElement>
					</form:Group>

					<form:Group>
						<form:GroupElement>
							<smartField:SmartField id="int16" value="{INT16}" contextEditable="true" width="12rem" change="updateCodeEditors"/>
						</form:GroupElement>
					</form:Group>

					<form:Group>
						<form:GroupElement>
							<smartField:SmartField id="byte" value="{BYTE}" contextEditable="true" width="12rem" change="updateCodeEditors"/>
						</form:GroupElement>
					</form:Group>

					<form:Group>
						<form:GroupElement>
							<smartField:SmartField id="bool" value="{BOOL}" contextEditable="true" width="12rem" change="updateCodeEditors"/>
						</form:GroupElement>
					</form:Group>
				</form:SmartForm>

				<VBox>
					<Panel expandable="true" expanded="true" width="auto" class="sapUiResponsiveMargin" headerText="Data">
						<l:VerticalLayout width="100%">
							<Title text="Current data: " id="currentSF"/>
							<ce:CodeEditor id="outputAreaChangedData" width="100%" height="500px" type="jsoniq" value=""/>
						</l:VerticalLayout>
					</Panel>
				</VBox>


				<semantic:editAction>
					<semantic:EditAction press="onEditPressed" visible="{= !${view>/editMode}}"/>
				</semantic:editAction>
				<semantic:saveAction>
					<semantic:SaveAction press="onSavePressed" visible="{view>/editMode}"/>
				</semantic:saveAction>
				<semantic:cancelAction>
					<semantic:CancelAction press="onCancelPressed" visible="{view>/editMode}"/>
				</semantic:cancelAction>
			</semantic:DetailPage>
		</detailPages>
	</SplitApp>

</mvc:View>
