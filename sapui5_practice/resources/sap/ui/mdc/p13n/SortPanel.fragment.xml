<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m">
	<ColumnListItem type="Active" selected="{selected}" class="sapUiSmallMarginBegin">
		<cells>
			<Label wrapping="true" text="{label}" tooltip="{tooltip}"/>
			<Select width="100%" selectedKey="{sortOrder}" change="onChangeOfSortOrder" enabled="{selected}">
				<items>
					<core:Item key="Ascending" text="Ascending"/>
					<core:Item key="Descending" text="Descending"/>
				</items>
			</Select>
		</cells>
	</ColumnListItem>
</core:FragmentDefinition>
